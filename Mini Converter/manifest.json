{
  "manifest_version": 3,
  "name": "Mini Converter",
  "version": "5587.0",
  "description": "Convert between HEX, RGB, HSL, HSV, HWB, CIELAB,  and Decimal formats.",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/images/icon16.png",
      "48": "assets/images/icon48.png",
      "128": "assets/images/icon128.png"
    }
  },
  "permissions": ["storage"],
  "icons": {
    "16": "assets/images/icon16.png",
    "48": "assets/images/icon48.png",
    "128": "assets/images/icon128.png"
  },
  "background": {
    "service_worker": "assets/js/background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["welcome.html"],
      "matches": ["<all_urls>"]
    }
  ]
}

